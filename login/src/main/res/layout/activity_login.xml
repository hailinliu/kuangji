<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@mipmap/login_bg"
       android:orientation="vertical">

     <TextView
         android:layout_width="wrap_content"
         android:text="欢迎使用Gem planet云挖矿"
         android:textColor="#14C7FF"
         android:textSize="16sp"
         android:layout_marginStart="20dp"
         android:layout_marginTop="60dp"
         android:layout_height="wrap_content"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_marginTop="30dp"
          android:textColor="#838383"
          android:textSize="12sp"
          android:layout_marginStart="20dp"
          android:text="可以用手机挖矿的APP"
          android:layout_height="wrap_content"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_marginStart="40dp"
           android:layout_marginEnd="40dp"
           android:layout_marginTop="60dp"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:text="手机号(+86)"
               android:textSize="12sp"
               android:textStyle="bold"
               android:textColor="@color/libTextWhite"
               android:layout_height="wrap_content"/>
           <EditText
               android:id="@+id/et_phone"
               android:layout_width="match_parent"
               android:textColor="#14C7FF"
               android:textSize="12sp"
               android:textColorHint="#999999"
               android:layout_marginTop="20dp"
               android:background="@null"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:layout_marginTop="5dp"
               android:background="@color/libTextWhite"
               android:layout_height="0.5dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:text="密码"
               android:textStyle="bold"
               android:layout_marginTop="20dp"
               android:textColor="@color/libTextWhite"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="20dp"
               android:layout_height="wrap_content">
               <EditText
                   android:id="@+id/et_pwd"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:textColor="#14C7FF"
                   android:textSize="12sp"
                   android:textColorHint="#999999"
                   android:background="@null"
                   android:layout_height="wrap_content"/>
               <ImageView
                   android:id="@+id/ivSee"
                   android:layout_width="21dp"
                    android:src="@mipmap/login_see"
                   android:layout_gravity="center"
                   android:layout_height="10dp"/>
           </LinearLayout>
        
           <View
               android:layout_width="match_parent"
               android:layout_marginTop="5dp"
               android:background="@color/libTextWhite"
               android:layout_height="0.5dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/tv_register"
                   android:layout_width="wrap_content"
                   android:text="注册"
                   android:visibility="invisible"
                   android:textStyle="bold"
                   android:textColor="@color/libTextWhite"
                   android:layout_height="wrap_content"/>
               <View
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"/>
               <TextView
                   android:id="@+id/tv_forget"
                   android:layout_width="wrap_content"
                   android:text="忘记密码"
                   android:textColor="@color/libTextWhite"
                   android:textStyle="bold"
                   android:layout_marginEnd="20dp"
                   android:layout_height="wrap_content"/>

           </LinearLayout>
           <TextView
               android:id="@+id/tv_bt"
               android:layout_width="match_parent"
               android:text="登录"
               android:background="@drawable/lib_button"
               android:textStyle="bold"
               android:textColor="@color/libTextWhite"
               android:layout_marginTop="50dp"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_height="40dp"/>
       </LinearLayout>

   </LinearLayout>
</layout>
