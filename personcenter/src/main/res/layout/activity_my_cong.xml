<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/homepage_bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#4D000000"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/include"
            layout="@layout/personcenter_head"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="#ff000000"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <it.mbkj.kuangji.view.NewTextView
        android:layout_width="wrap_content"
        android:text="充值种类"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/libTextWhite"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <it.mbkj.kuangji.view.NewTextView
        android:layout_width="wrap_content"
        android:text="USDT"
        android:textColor="@color/libTextWhite"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#ff000000"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <it.mbkj.kuangji.view.NewTextView
            android:layout_width="wrap_content"
            android:text="链名称"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/libTextWhite"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <it.mbkj.kuangji.view.NewTextView
            android:layout_width="wrap_content"
            android:text="TRC20"
            android:textColor="@color/libTextWhite"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/person_cong"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="150dp"/>
        <it.mbkj.kuangji.view.NewTextView
            android:layout_width="wrap_content"
            android:text="长按保存二维码至相册"
            android:textColor="@color/libTextWhite"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>
        <it.mbkj.kuangji.view.NewTextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/libTextWhite"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"/>
        <it.mbkj.kuangji.view.NewTextView
            android:id="@+id/tv_fuzhi"
            android:layout_width="wrap_content"
            android:text="复制地址"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@mipmap/person_zhiya_sure"
            android:textColor="@color/libTextWhite"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#4D000000"
        android:layout_height="wrap_content">
        <it.mbkj.kuangji.view.NewTextView
            android:id="@+id/tv_shuoming"
            android:layout_width="match_parent"
            android:text=" 温馨提示:\n为保证资金安全,请选择TRC20通道进行操作,否则资金不到账概不负责"
            android:textSize="12sp"
            android:textColor="@color/libTextWhite"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
</layout>