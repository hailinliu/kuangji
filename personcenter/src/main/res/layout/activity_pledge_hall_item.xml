<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/personfragment_zhiya_item"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
<it.mbkj.kuangji.view.NewTextView
    android:id="@+id/tv_title"
    android:layout_width="wrap_content"
    android:text="一级质押礼包"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:textColor="@color/libTextWhite"
    android:background="@mipmap/person_item_text_bg"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="wrap_content"/>
  <it.mbkj.kuangji.view.NewTextView
      android:id="@+id/tv_num_tit"
      android:layout_width="wrap_content"
      android:layout_marginTop="20dp"
      android:text="质押数量:"
      android:textColor="@color/libTextWhite"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_title"
      android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:text="100lbs"
        android:textColor="@color/libTextWhite"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toEndOf="@id/tv_num_tit"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_qixian_tit"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="质押期限:"
        android:textColor="@color/libTextWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_num_tit"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_qixian"
        android:layout_width="wrap_content"
        android:text="30 天"
        android:textColor="@color/libTextWhite"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_num_tit"
        app:layout_constraintStart_toEndOf="@id/tv_qixian_tit"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_baifen"
        android:layout_width="wrap_content"
        android:text="30%"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textColor="#DF8524"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_nianhua"
        android:layout_width="wrap_content"
        android:text="年化收益率"
        android:textColor="@color/libTextWhite"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_baifen"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_sheng"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_qixian_tit"
        android:layout_height="wrap_content">
        <it.mbkj.kuangji.view.NewTextView
            android:id="@+id/tv_shengyu"
            android:layout_width="wrap_content"
            android:text="剩余数量"
            android:textColor="@color/libTextWhite"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:thumb="@null"
            android:background="@color/transparent"
            android:progressDrawable="@drawable/lib_seek_list"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_bizhi"
            android:layout_width="wrap_content"
            android:textColor="@color/libTextWhite"
            android:text="50/100"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:text="确认质押"
        android:textColor="@color/libTextWhite"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="10dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@mipmap/person_zhiya_sure"
        app:layout_constraintTop_toBottomOf="@id/ll_sheng"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
<View
    android:layout_width="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_sure"
    android:layout_height="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>