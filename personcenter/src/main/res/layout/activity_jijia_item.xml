<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/person_jijia_item"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_jijia_name"
        android:layout_width="wrap_content"
        android:text="机甲名称:"
        android:textStyle="bold"
        android:textColor="@color/libTextWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_jijia_name_content"
       android:layout_width="wrap_content"
       android:text="爆发阿莎"
       android:layout_marginStart="10dp"
       android:textStyle="bold"
       android:textColor="@color/libTextWhite"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toEndOf="@id/tv_jijia_name"
       android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
    android:id="@+id/tv_jijia_price"
    android:layout_width="wrap_content"
    android:text="机甲价格:"
    android:layout_marginTop="10dp"
    android:textStyle="bold"
    android:textColor="@color/libTextWhite"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_jijia_name"
    android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_jijia_price_content"
        android:layout_width="wrap_content"
        android:text="4556.56 USDT"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/libTextWhite"
        app:layout_constraintTop_toBottomOf="@id/tv_jijia_name"
        app:layout_constraintStart_toEndOf="@id/tv_jijia_price"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_jijia_period"
        android:layout_width="wrap_content"
        android:text="机甲周期:"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/libTextWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_jijia_price"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_jijia_period_content"
        android:layout_width="wrap_content"
        android:text="540T+540T"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/libTextWhite"
        app:layout_constraintTop_toBottomOf="@id/tv_jijia_price"
        app:layout_constraintStart_toEndOf="@id/tv_jijia_period"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
    android:id="@+id/tv_jijia_profit"
    android:layout_width="wrap_content"
    android:text="机甲收益:"
    android:layout_marginTop="10dp"
    android:textStyle="bold"
    android:textColor="@color/libTextWhite"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_jijia_period"
    android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_jijia_profit_content"
        android:layout_width="wrap_content"
        android:text="0.131232"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/libTextWhite"
        app:layout_constraintTop_toBottomOf="@id/tv_jijia_period"
        app:layout_constraintStart_toEndOf="@id/tv_jijia_profit"
        android:layout_height="wrap_content"/>

    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_jijia_already_time"
        android:layout_width="wrap_content"
        android:text="已领取天数:"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/libTextWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_jijia_profit_content"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_jijia_already_time_content"
        android:layout_width="wrap_content"
        android:text="135小时24分"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/libTextWhite"
        app:layout_constraintTop_toBottomOf="@id/tv_jijia_profit_content"
        app:layout_constraintStart_toEndOf="@id/tv_jijia_already_time"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_jijia_yichiyou"
        android:layout_width="wrap_content"
        android:text="已持有时间:"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/libTextWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_jijia_already_time_content"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_jijia_yichiyou_content"
        android:layout_width="wrap_content"
        android:text="135小时24分"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/libTextWhite"
        app:layout_constraintTop_toBottomOf="@id/tv_jijia_already_time_content"
        app:layout_constraintStart_toEndOf="@id/tv_jijia_yichiyou"
        android:layout_height="wrap_content"/>
 <it.mbkj.kuangji.view.NewTextView
     android:id="@+id/tv_jijia_open_time"
     android:layout_width="wrap_content"
     android:text="机甲启动时间:"
     android:layout_marginTop="10dp"
     android:textStyle="bold"
     android:textColor="@color/libTextWhite"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/tv_jijia_yichiyou_content"
     android:layout_height="wrap_content"/>
 <it.mbkj.kuangji.view.NewTextView
     android:id="@+id/tv_jijia_open_time_content"
     android:layout_width="wrap_content"
     android:text="2021/04/18 14:"
     android:layout_marginStart="10dp"
     android:textStyle="bold"
     android:layout_marginTop="10dp"
     android:textColor="@color/libTextWhite"
     app:layout_constraintTop_toBottomOf="@id/tv_jijia_yichiyou_content"
     app:layout_constraintStart_toEndOf="@id/tv_jijia_open_time"
     android:layout_height="wrap_content"/>
 <it.mbkj.kuangji.view.NewTextView
     android:id="@+id/tv_jijia_jiesu"
     android:layout_width="wrap_content"
     android:text="机甲结束时间:"
     android:layout_marginTop="10dp"
     android:textStyle="bold"
     android:visibility="gone"
     android:textColor="@color/libTextWhite"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/tv_jijia_open_time_content"
     android:layout_height="wrap_content"/>
 <it.mbkj.kuangji.view.NewTextView
     android:id="@+id/tv_jijia_jiesu_content"
     android:layout_width="wrap_content"
     android:text="135小时24分"
     android:layout_marginStart="10dp"
     android:textStyle="bold"
     android:visibility="gone"
     android:layout_marginTop="10dp"
     android:textColor="@color/libTextWhite"
     app:layout_constraintTop_toBottomOf="@id/tv_jijia_open_time_content"
     app:layout_constraintStart_toEndOf="@id/tv_jijia_jiesu"
     android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/person_already_open"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>