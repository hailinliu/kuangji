<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@mipmap/homepage_bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#4D000000"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/include"
            layout="@layout/personcenter_head"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/person_ti_item"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_pass"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:hint="请输入新的交易密码"
            android:textColorHint="@color/libTextWhite"
            android:background="@null"
            android:textColor="@color/libTextWhite"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/person_ti_item"
        android:paddingBottom="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_confirm"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:hint="请再次输入交易密码"
            android:textColorHint="@color/libTextWhite"
            android:background="@null"
            android:textColor="@color/libTextWhite"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@mipmap/person_ti_item"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <EditText
            android:id="@+id/et_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColor="@color/libTextWhite"
            android:textColorHint="@color/libTextWhite"
           />

        <it.mbkj.kuangji.view.NewTextView
            android:id="@+id/tv_huoqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:background="@mipmap/tibi_bg"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="获取验证码(60s)"
            android:textColor="@color/libTextWhite"
            android:textStyle="bold" />
    </LinearLayout>

    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:text="确定"
        android:textColor="@color/libTextWhite"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@mipmap/person_zhiya_sure"
        android:layout_height="wrap_content"/>
</LinearLayout>
</LinearLayout>
</layout>