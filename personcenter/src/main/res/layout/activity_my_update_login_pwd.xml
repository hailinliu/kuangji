<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/homepage_bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#4D000000"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/include"
            layout="@layout/personcenter_head"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:background="@mipmap/person_ti_item"
    android:paddingBottom="5dp"
    android:paddingStart="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_newPwd"
        android:layout_width="match_parent"
        android:hint="请输入旧的登录密码"
        android:background="@null"
        android:textColorHint="@color/libTextWhite"
        android:layout_gravity="center"
        android:textColor="@color/libTextWhite"
        android:layout_height="wrap_content"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/person_ti_item"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_pass"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:hint="请输入新的登录密码"
            android:textColorHint="@color/libTextWhite"
            android:background="@null"
            android:textColor="@color/libTextWhite"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/person_ti_item"
        android:paddingBottom="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_xin"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:hint="请再次输入登录密码"
            android:textColorHint="@color/libTextWhite"
            android:background="@null"
            android:textColor="@color/libTextWhite"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:text="确定"
        android:textColor="@color/libTextWhite"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@mipmap/person_zhiya_sure"
        android:layout_height="wrap_content"/>
</LinearLayout>
</LinearLayout>
</layout>