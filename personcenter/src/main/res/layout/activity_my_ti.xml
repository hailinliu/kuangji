<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/homepage_bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#4D000000"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/include"
            layout="@layout/personcenter_head"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:background="@mipmap/person_ti_item"
    android:paddingBottom="5dp"
    android:paddingStart="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_address"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:paddingStart="10dp"
        android:textColorHint="@color/libTextWhite"
        android:background="@null"
        android:textColor="@color/libTextWhite"
        android:layout_height="match_parent"/>
</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@mipmap/person_ti_item"
    android:paddingBottom="5dp"
    android:paddingStart="10dp"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_num"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:paddingStart="10dp"
        android:textColorHint="@color/libTextWhite"
        android:background="@null"
        android:textColor="@color/libTextWhite"
        android:layout_height="match_parent"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_quan"
        android:layout_width="60dp"
        android:text="全部"
        android:textColor="@color/libTextWhite"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:background="@mipmap/tibi_bg"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/person_ti_item"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_pass"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:textColorHint="@color/libTextWhite"
            android:layout_gravity="center"
            android:background="@null"
            android:textColor="@color/libTextWhite"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#4D000000"
        android:paddingStart="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/tv_tiqu"
        android:layout_width="wrap_content"
         android:textColor="@color/libTextWhite"
        android:text="可提取USDT:0 USDT"
        android:textSize="12sp"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_shouxu"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:textColor="@color/libTextWhite"
            android:text="手续费:0 USDT"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_daozhang"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:text="到账数量:0 USDT"
            android:textSize="12sp"
            android:textColor="@color/libTextWhite"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_daozhangtime"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:text="到账时间:T+0"
            android:textSize="12sp"
            android:textColor="@color/libTextWhite"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="温馨提示:为保证资金安全,请选择TRC20通道进行操作,否则资金不到账概不负责"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/libTextWhite"
        android:layout_height="wrap_content"/>
    <it.mbkj.kuangji.view.NewTextView
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:text="确定"
        android:textColor="@color/libTextWhite"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@mipmap/person_zhiya_sure"
        android:layout_height="wrap_content"/>
</LinearLayout>
</LinearLayout>
</layout>