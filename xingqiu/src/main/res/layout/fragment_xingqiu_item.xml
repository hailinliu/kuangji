<?xml version="1.0" encoding="utf-8" standalone="no"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="20dp"
    android:background="@mipmap/jijia_item_bg"
    android:orientation="vertical"
   >
<pl.droidsonroids.gif.GifImageView
    android:id="@+id/image"
    android:layout_width="110dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="40dp"
    android:layout_height="120dp"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_name"
       android:layout_width="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       android:paddingTop="12dp"
       android:layout_marginStart="5dp"
       android:text="机甲名称:"
       android:textSize="12sp"
       android:layout_marginTop="20dp"
       android:textColor="@color/libTextWhite"
       app:layout_constraintStart_toEndOf="@id/image"
       android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_name_content"
       android:layout_width="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       android:paddingTop="12dp"
       android:layout_marginStart="5dp"
       android:layout_marginTop="20dp"
       android:text="爆发阿莎"
       android:textColor="@color/libTextWhite"
       android:textSize="12sp"
       app:layout_constraintStart_toEndOf="@id/tv_name"
       android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_price"
       android:layout_width="wrap_content"
       app:layout_constraintStart_toEndOf="@id/image"
       android:text="机甲价格:"
       android:textSize="12sp"
       android:textColor="@color/libTextWhite"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toBottomOf="@id/tv_name"
       android:layout_marginStart="5dp"
       android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_price_content"
       android:layout_width="wrap_content"
       app:layout_constraintStart_toEndOf="@id/tv_price"
       app:layout_constraintTop_toBottomOf="@id/tv_name"
       android:textSize="12sp"
       android:layout_marginTop="10dp"
       android:text="4556.00 USDT"
       android:textColor="@color/libTextWhite"
       android:layout_marginStart="5dp"
       android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_period"
       android:layout_width="wrap_content"
       app:layout_constraintStart_toEndOf="@id/image"
       android:text="机甲周期:"
       android:textSize="12sp"
       android:textColor="@color/libTextWhite"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toBottomOf="@id/tv_price"
       android:layout_marginStart="5dp"
       android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_period_content"
       android:layout_width="wrap_content"
       app:layout_constraintStart_toEndOf="@id/tv_period"
       app:layout_constraintTop_toBottomOf="@id/tv_price"
       android:textSize="12sp"
       android:layout_marginTop="10dp"
       android:text="540T+540T"
       android:textColor="@color/libTextWhite"
       android:layout_marginStart="5dp"
       android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_profit"
       android:layout_width="wrap_content"
       app:layout_constraintStart_toEndOf="@id/image"
       android:text="机甲收益:"
       android:textSize="12sp"
       android:textColor="@color/libTextWhite"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toBottomOf="@id/tv_period"
       android:layout_marginStart="5dp"
       android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_profit_content"
       android:layout_width="wrap_content"
       app:layout_constraintStart_toEndOf="@id/tv_profit"
       app:layout_constraintTop_toBottomOf="@id/tv_period"
       android:textSize="12sp"
       android:layout_marginTop="10dp"
       android:text="0.12142"
       android:textColor="@color/libTextWhite"
       android:layout_marginStart="5dp"
       android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_jijia_suanli"
       android:layout_width="wrap_content"
       app:layout_constraintStart_toEndOf="@id/image"
       android:text="机甲算力:"
       android:textSize="12sp"
       android:textColor="@color/libTextWhite"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toBottomOf="@id/tv_profit"
       android:layout_marginStart="5dp"
       android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_jijiasuanli_content"
       android:layout_width="wrap_content"
       app:layout_constraintStart_toEndOf="@id/tv_jijia_suanli"
       app:layout_constraintTop_toBottomOf="@id/tv_profit"
       android:textSize="12sp"
       android:layout_marginTop="10dp"
       android:text="0.12142"
       android:textColor="@color/libTextWhite"
       android:layout_marginStart="5dp"
       android:layout_height="wrap_content"/>
   <it.mbkj.kuangji.view.NewTextView
       android:id="@+id/tv_buy"
       android:layout_width="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="5dp"
       android:text="立即购买"
       android:gravity="center"
       android:textColor="@color/libTextWhite"
       android:background="@mipmap/lib_sure"
       app:layout_constraintTop_toBottomOf="@id/tv_jijiasuanli_content"
       android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
