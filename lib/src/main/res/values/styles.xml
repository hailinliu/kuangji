<resources>
    <!-- Base application theme. -->
    <style name="libBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/libColorPrimary</item>
        <item name="colorPrimaryDark">@color/libColorPrimary</item>
        <item name="colorAccent">@color/libTextWhite</item>
        <item name="colorControlNormal">@color/libColorControlNormal</item>
        <!--<item name="colorControlActivated">@color/libColorControlActivated</item>-->

        <item name="android:windowTranslucentStatus">false</item>
        <!--默认text字体颜色-->
        <item name="android:textColor">@color/libTextGray</item>
        <!--输入框默认输入字体-->
        <item name="editTextColor">@color/libTextGray</item>
        <!--提示字体颜色-->
        <item name="android:textColorHint">@color/libTextColorHint</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!--默认所有按钮样式-->
        <item name="buttonStyle">@style/libButtonStyle</item>
        <item name="android:windowBackground">@color/lib_background</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="libSplashTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@color/lib_background</item>
    </style>

    <style name="libButtonStyle">
        <item name="android:textColor">@color/lib_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30pt</item>
        <item name="android:background">@drawable/lib_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90pt</item>
    </style>
    <style name="libButtonStyle1">
        <item name="android:textColor">@color/lib_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30pt</item>
        <item name="android:background">@drawable/lib_button1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90pt</item>
    </style>
    <style name="libButtonStyle.White">
        <item name="android:textColor">@color/lib_dominant</item>
        <item name="android:background">@drawable/lib_button_white</item>
    </style>

    <style name="libButtonCheckCodeStyle">
        <item name="android:textColor">#87aaff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28pt</item>
        <item name="android:minWidth">180pt</item>
        <item name="android:text">获取验证码</item>
        <item name="android:paddingStart">15pt</item>
        <item name="android:paddingEnd">15pt</item>
        <item name="android:background">@drawable/lib_button</item>
    </style>

    <style name="libButtonCheckCodeStyle.Translucent">
        <item name="android:background">@drawable/lib_button_translucent</item>
    </style>

    <style name="libButtonCancelStyle">
        <item name="android:textColor">@color/lib_dominant</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28pt</item>
        <item name="android:background">@drawable/lib_cancle_button</item>
    </style>

    <style name="libSwitchStyle">
        <item name="android:track">@drawable/lib_switch_track</item>
        <item name="android:thumb">@drawable/lib_switch_thumb</item>
    </style>


    <style name="lib_custom_dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        //Dialog的windowFrame框为无
        <item name="android:windowIsFloating">true</item>
        //是否浮现在activity之上
        <item name="android:windowIsTranslucent">true</item>
        //是否半透明
        <item name="android:windowNoTitle">true</item>
        //是否显示title
        <item name="android:background">@android:color/transparent</item>
        //设置dialog的背景
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.7</item>
        //就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="lib_check" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/lib_check_bg</item>
    </style>
</resources>
